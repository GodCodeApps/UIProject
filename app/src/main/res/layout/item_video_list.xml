<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:applot="http://schemas.android.com/apk/res-auto">
    <data >
        <variable
            name="item"
            type="com.pym.uiproject.app.playvideo.VideoLiveList.HomeDivsBean.HomePartitonBean.RoomInfoBean"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <RelativeLayout
            android:id="@+id/layoutBox"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >
            <RelativeLayout
                android:id="@+id/album_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageViewItem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/player_icon_start_play"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="58dp"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:background="@mipmap/img_1">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationViewiew"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.2"
                        applot:lottie_autoPlay="true"
                        applot:lottie_loop="true" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="直播中"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/watchNumber"
                    android:background="#80cecece"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:text="12人观看"/>
                </LinearLayout>
            </RelativeLayout>
            <FrameLayout
                android:id="@+id/layoutContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                 />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imageView"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:singleLine="true"
                    android:text="@{item.title}" />

                <TextView
                    android:id="@+id/tvAuth"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>
